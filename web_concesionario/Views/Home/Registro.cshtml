@model  ProyectoFinal.Entities.UsuarioObj

@{
    Layout = null;
}

<html xmlns="http://www.w3.org/1999/xhtml">

<head>
    <title>Registro</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/register.css" rel="stylesheet" />
</head>

<body>

    @if (TempData.ContainsKey("RegisterSuccess") && TempData["RegisterSuccess"].ToString() == "True")
    {
        TempData["RegisterSuccess"] = "False";
        <div class="container">
            <div class="d-flex justify-content-center h-100">
                <div class="card">

                    <div class="card-body">
                        <h4>REGISTRO EXITOSO</h4>
                        <div class="d-flex justify-content-center">
                            @Html.ActionLink("INICIAR SESIÓN", "Login", "Home", null, new { @class = "links" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        using (Html.BeginForm("Registro", "Home", FormMethod.Post, new { id = "form" }))
        {
            <div class="container">
                <div class="d-flex justify-content-center h-100">
                    <div class="card">
                        <div class="card-header">
                            <h4>Registro</h4>
                        </div>
                        <div class="card-body">

                            <p id="userError" style="color:red;"></p>

                            <form>
                                <h6>Cédula</h6>
                                <div class="input-group form-group">
                                    @Html.TextBoxFor(Model => Model.Identificacion, new { @Class = "form-control", @id = "id", required = "required" })
                                </div>

                                <h6>Nombre</h6>
                                <div class="input-group form-group">
                                    @Html.TextBoxFor(Model => Model.Nombre, new { @Class = "form-control", @id = "name", required = "required" })
                                </div>

                                <h6> Apellido </h6>
                                <div class="input-group form-group">
                                    @Html.TextBoxFor(Model => Model.Apellido, new { @Class = "form-control", @id = "lastN", required = "required" })
                                </div>


                                <h6>Correo Electónico</h6>

                                <div class="input-group form-group">
                                    @Html.TextBoxFor(Model => Model.Correo, new { @Class = "form-control", @id = "mail", required = "required" })
                                </div>


                                <h6>Teléfono</h6>

                                <div class="input-group form-group">
                                    @Html.TextBoxFor(Model => Model.Telefono, new { @Class = "form-control numeric", @id = "tel", required = "required" })
                                </div>


                                <h6> Nombre de Usuario</h6>
                                <div class="input-group form-group">
                                    @Html.TextBoxFor(Model => Model.NombUsuario, new { @Class = "form-control", @id = "user", required = "required" })
                                </div>


                                <h6>Contraseña</h6>
                                <div class="input-group form-group">
                                    @Html.TextBoxFor(Model => Model.Contra, new { @Class = "form-control", @id = "pass", @type = "password", required = "required" })
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Registrarse" class="btn login_btn">
                                </div>
                            </form>
                        </div>

                        <div class="card-footer">
                            <div class="d-flex justify-content-center links">
                                ¿Ya tienes una cuenta?<a href="@Url.Action("Login","Home" )">Iniciar Sesión</a>
                            </div>
                            <div class="d-flex justify-content-center links">
                                <a href="@Url.Action("Index","Home" )"> Volver al Inicio</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    <!-- REQUIRED SCRIPTS -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/JsScripts/Register.js"></script>
    <script src="~/JsScripts/ValidarCampos.js"></script>
</body>
</html>