
@model  ProyectoFinal.Entities.LoginObj

@{
    Layout = null;
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Iniciar Sesión</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/login.css" rel="stylesheet" />
</head>
<body>

    @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { id = "form" }))
    {
        <div class="container">
            <div class="d-flex justify-content-center h-100">
                <div class="card">
                    <div class="card-header">
                        <h3>Iniciar Sesión</h3>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                </div>
                                @Html.TextBoxFor(Model => Model.Username, new { Class = "form-control", id = "user", placeholder = "Usuario", type = "text" })
                            </div>
                            <p id="userError" style="color:red;"></p>
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                                </div>
                                @Html.TextBoxFor(Model => Model.Password, new { Class = "form-control", id = "pass", placeholder = "Contraseña", type = "password" })
                            </div>
                            <p id="passError" style="color:red;height:1px">@ViewBag.Message</p>
                            <div class="form-group">
                                <input type="submit" value="Ingresar" class="btn float-right login_btn">
                            </div>
                        </form>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-center links">
                            ¿No tienes una cuenta?<a href="@Url.Action("Registro","Home" )">Registrarse</a>
                        </div>
                        <div class="d-flex justify-content-center">
                            <a href="@Url.Action("Index","Home" )">Volver al Inicio</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    <!-- REQUIRED SCRIPTS -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/JsScripts/Login.js"></script>
</body>
</html>

